<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorPrimary</item>

        <!-- This is the styling for action bar -->
        <item name="actionBarStyle">@style/SWActionBar</item>
        <!--To change the text styling of options menu items</item>-->
        <item name="android:itemTextAppearance">@style/SWMenuItem</item>
        <!--To change the background of options menu-->
        <item name="android:itemBackground">@color/colorPrimary</item>
    </style>

    <style name="SWActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/colorPrimaryDark</item>
        <item name="titleTextStyle">@style/SWActionBarTitle</item>
    </style>

    <style name="SWActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/poller_one</item>
    </style>

    <style name="SWMenuItem" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/poller_one</item>
    </style>

</resources>
